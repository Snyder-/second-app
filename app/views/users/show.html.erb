<% provide(:title, @user.name )%>
<p id="notice"><%= notice %></p>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <p>
          <strong><%= gravatar_for(@user)%></strong>
        </p>

        <p>
          <strong>Name:</strong>
         <%= @user.name %>
        </p>

        <p>
          <strong>Email:</strong>
          <%= @user.email %>
        </p>
          <%= link_to 'Edit', edit_user_path(@user) %> |
          <%= link_to 'Back', users_path %>
      </h1>
    </section>
  </aside>
</div>  